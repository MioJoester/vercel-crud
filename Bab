    <script>
        const menuItems = [
            { id: 1, name: "Classic Burger", category: "lunch", price: 120, description: "Juicy beef patty with fresh vegetables", icon: "ðŸ”" },
            { id: 2, name: "Margherita Pizza", category: "lunch", price: 200, description: "Fresh mozzarella and basil", icon: "ðŸ•" },
            { id: 3, name: "Caesar Salad", category: "lunch", price: 80, description: "Crisp romaine with caesar dressing", icon: "ðŸ¥—" },
            { id: 4, name: "Pancakes", category: "breakfast", price: 90, description: "Fluffy pancakes with maple syrup", icon: "ðŸ¥ž" },
            { id: 5, name: "French Toast", category: "breakfast", price: 85, description: "Golden brown with cinnamon", icon: "ðŸž" },
            { id: 6, name: "Coffee", category: "beverages", price: 40, description: "Fresh brewed coffee", icon: "â˜•" },
            { id: 7, name: "Orange Juice", category: "beverages", price: 50, description: "Freshly squeezed orange juice", icon: "ðŸ§ƒ" },
            { id: 8, name: "Samosa", category: "snacks", price: 20, description: "Crispy fried pastry with spiced filling", icon: "ðŸ¥Ÿ" },
            { id: 9, name: "French Fries", category: "snacks", price: 60, description: "Crispy golden fries", icon: "ðŸŸ" },
            { id: 10, name: "Chocolate Cake", category: "desserts", price: 100, description: "Rich chocolate cake with ganache", icon: "ðŸ°" },
            { id: 11, name: "Ice Cream", category: "desserts", price: 70, description: "Assorted flavors", icon: "ðŸ¨" },
            { id: 12, name: "Pasta Alfredo", category: "lunch", price: 150, description: "Creamy fettuccine alfredo", icon: "ðŸ" },
        ];

        let currentCategory = 'all';

        function renderMenu(items) {
            const menuGrid = document.getElementById('menuGrid');
            const noResults = document.getElementById('noResults');
            
            if (items.length === 0) {
                menuGrid.style.display = 'none';
                noResults.style.display = 'block';
                return;
            }

            menuGrid.style.display = 'grid';
            noResults.style.display = 'none';
            
            menuGrid.innerHTML = items.map(item => `
                <div class="menu-item" data-category="${item.category}">
                    <div class="menu-item-img">${item.icon}</div>
                    <div class="menu-item-content">
                        <div class="menu-item-header">
                            <div>
                                <span class="category">${item.category}</span>
                                <h3>${item.name}</h3>
                            </div>
                        </div>
                        <p>${item.description}</p>
                        <div class="menu-item-footer">
                            <span class="price">â‚¹${item.price}</span>
                            <button class="add-btn" onclick="addToCart(${item.id})">
                                <i class="bi bi-cart-plus"></i> Add
                            </button>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function filterCategory(category) {
            currentCategory = category;
            const buttons = document.querySelectorAll('.filter-btn');
            buttons.forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            
            const searchInput = document.getElementById('searchInput');
            searchInput.value = '';
            
            filterMenu();
        }

        function filterMenu() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            
            let filtered = menuItems;
            
            if (currentCategory !== 'all') {
                filtered = filtered.filter(item => item.category === currentCategory);
            }
            
            if (searchTerm) {
                filtered = filtered.filter(item => 
                    item.name.toLowerCase().includes(searchTerm) ||
                    item.description.toLowerCase().includes(searchTerm)
                );
            }
            
            renderMenu(filtered);
        }

        function addToCart(itemId) {
            const item = menuItems.find(i => i.id === itemId);
            alert(`${item.name} added to cart!`);
        }

        function toggleMenu() {
            const nav = document.getElementById('nav');
            nav.classList.toggle('active');
        }

        // Initial render
        renderMenu(menuItems);
    </script>
</body>
